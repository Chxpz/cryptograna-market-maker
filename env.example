# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
PRIVATE_KEY=your_private_key_here

# DEX Configuration
DEX_TARGET=orca
PAIR=SOL-USDC

# API Keys
HELIUS_API_KEY=your_helius_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Bot Configuration
